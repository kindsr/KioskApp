<UserControl x:Class="iBeautyNail.Pages.A010_AdminBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:iBeautyNail.Pages"
             xmlns:ctrl="clr-namespace:iBeautyNail.Extensions.Controls"
             xmlns:converter="clr-namespace:iBeautyNail.Extensions.Converters"
             xmlns:datas="clr-namespace:iBeautyNail.Datas"
             xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
             xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
             Style="{StaticResource ibnAdmin}"
             mc:Ignorable="d" 
             d:DesignHeight="1920" d:DesignWidth="1080" >
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:SizeConverter x:Key="SizeConverter"/>
            <Style x:Key="tabControlStyle" TargetType="{x:Type TabControl}">
                <Setter Property="Background" Value="{DynamicResource styleWhiteBackground}" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="BorderThickness" Value="0,0,0,0"/>
                <Setter Property="TabStripPlacement" Value="Bottom" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <!--<Setter Property="Foreground" Value="{DynamicResource styleColorWhiteText}" />-->
            </Style>

            <Style x:Key="tabItemStyle" TargetType="{x:Type TabItem}">
                <Setter Property="Background" Value="#FFF48FB1"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="Width" Value="309"/>
                <Setter Property="Foreground" Value="{DynamicResource styleColorInit}" />
                <Setter Property="BorderThickness" Value="0,0,0,0"/>
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="270" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Border Name="Border" CornerRadius="0,0,20,20" BorderBrush="Transparent" BorderThickness="3,3,3,3">
                                <!--make a correct render thanks to data binding -->
                                <ContentPresenter x:Name="ContentSite" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource styleWhiteBackground}" />
                                    <Setter Property="Foreground" Value="{DynamicResource styleColorPinkText}" />
                                    <Setter Property="FontWeight" Value="ExtraBold" />
                                    <Setter TargetName="Border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Images/ad_keypad_blue_bg.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <!--<Setter TargetName="Border" Property="Background" Value="{DynamicResource stylePinkBackground}" />-->
                                    <Setter TargetName="Border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Images/ad_keypad_blue_bg.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleTextPassword" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="#Noto Sans Regular" />
                <Setter Property="FontSize" Value="32" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="TextAlignment" Value="Left" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="#FFAAAAAA" />
            </Style>

            <Style x:Key="styleKeypadWhiteBg" TargetType="{x:Type ctrl:TouchButton}">
                <Setter Property="Width" Value="175" />
                <Setter Property="Height" Value="70" />
                <Setter Property="Source" Value="pack://siteoforigin:,,,/Resources/Images/ad_keypad_bg.png" />
                <Setter Property="SourceOver" Value="pack://siteoforigin:,,,/Resources/Images/ad_keypad_on_bg.png" />
            </Style>

            <Style x:Key="styleKeypadWhiteTB" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Foreground" Value="#FF000000" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="styleKeypadBlueBg" TargetType="{x:Type ctrl:TouchButton}">
                <Setter Property="Width" Value="175" />
                <Setter Property="Height" Value="70" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorWhiteText}" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Source" Value="pack://siteoforigin:,,,/Resources/Images/ad_keypad_blue_bg.png" />
                <Setter Property="SourceOver" Value="pack://siteoforigin:,,,/Resources/Images/ad_keypad_blue_on_bg.png" />
            </Style>

            <Style x:Key="styleKeypadBlueTB" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorInit}" />
                <!--<Setter Property="FontWeight" Value="Bold" />-->
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="DeviceHeaderStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorWhiteText}" />
                <Setter Property="FontSize" Value="22" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="DeviceStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="#FF000000" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="DeviceStatusStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="#FF000000" />
                <Setter Property="FontSize" Value="18" />
                <!--<Setter Property="FontWeight" Value="Bold" />-->
            </Style>

            <Style x:Key="DeviceStatusChangeStyle" TargetType="{x:Type ctrl:TouchButton}">
                <Setter Property="Width" Value="140" />
                <Setter Property="Height" Value="56" />
                <Setter Property="Source" Value="pack://siteoforigin:,,,/Resources/Images/bu_stbg.png" />
                <Setter Property="SourceOver" Value="pack://siteoforigin:,,,/Resources/Images/bu_stbg_on.png" />
            </Style>

            <Style x:Key="DeviceStatusChangeTBStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="{DynamicResource styleColorBlueText}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style x:Key="styleTitleTextblock" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorMainTextGray}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="styleTitleTextbox" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorMainTextGray}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="2" />
            </Style>

            <Style x:Key="styleTitleLabel" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorWhiteText}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="styleGroubox" TargetType="GroupBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Images/con_bottombg.jpg" Stretch="Fill"/>
                                    </Border.Background>
                                    <Label Foreground="{DynamicResource styleColorWhiteText}" Margin="20,0"
                                           VerticalAlignment="Center">
                                        <ContentPresenter Margin="0" ContentSource="Header" RecognizesAccessKey="True" />
                                    </Label>
                                </Border>
                                <Border Grid.Row="1" BorderThickness="2,0,2,2" BorderBrush="{DynamicResource styleColorPinkText}">
                                    <ContentPresenter Margin="4" />
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="styleButton" TargetType="Button">
                <Setter Property="FontSize" Value="24" />
            </Style>
            <Style x:Key="toggleStyle" BasedOn="{StaticResource {x:Type ToggleButton}}"
                   TargetType="{x:Type RadioButton}">
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="true">
                        <Setter Property="Background" Value="{DynamicResource styleColorPinkText}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="styleTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="TextAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Foreground" Value="{DynamicResource styleColorMainTextGray}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="2" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer PanningMode="VerticalOnly"
              VerticalScrollBarVisibility="Hidden" 
              HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="ctPagebody">

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="36"/>
                <RowDefinition Height="13"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="27"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Stretch="None" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Source="pack://siteoforigin:,,,/Resources/Images/gr_title.png"></Image>

            <ctrl:AdvancedStretchTextBlock Grid.Row="1" Grid.Column="3" x:Name="ctTbMain" Text="System Status" Style="{DynamicResource styleTextMain}" VerticalAlignment="Center" HorizontalAlignment="Left" />

            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
                <TabControl x:Name="AdminTab" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabStripPlacement="Right" Style="{DynamicResource tabControlStyle}" ItemContainerStyle="{DynamicResource tabItemStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ChangeTabItemCommand}" CommandParameter="{Binding ElementName=AdminTab, Path=SelectedItem}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <TabItem x:Name="tabDevice" Header="Device">
                        <Grid Margin="10,10,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="82"/>
                                <RowDefinition Height="5"/>

                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="13" 
                                      Header="{Binding CancelPaymentMsg}" FontSize="24"  
                                      Style="{DynamicResource styleGroubox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="82"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="82"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1"  Grid.Column="1" 
                                   Text="Approval No" Foreground="Black"
                                   Style="{DynamicResource styleTitleTextblock}"/>
                                    <TextBox Grid.Row="1"  Grid.Column="3"
                                     Style="{DynamicResource styleTitleTextbox}"
                                     MaxLength="8"
                                     Text="{Binding ApprovalNumber}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="GotFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.GotFocusedCommand}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="LostFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.LostFocusedCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <TextBlock Grid.Row="1"  Grid.Column="5" 
                                   Text="Price" Foreground="Black"
                                   Style="{DynamicResource styleTitleTextblock}"/>
                                    <TextBox Grid.Row="1"   Grid.Column="7"
                                     Style="{DynamicResource styleTitleTextbox}"
                                     MaxLength="5"
                                     Text="{Binding CancelPrice}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="GotFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.GotFocusedCommand}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="LostFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.LostFocusedCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <TextBlock Grid.Row="1"  Grid.Column="9" 
                                   Text="Approval Date(6digits)" Foreground="Black"
                                   Style="{DynamicResource styleTitleTextblock}"/>
                                    <TextBox Grid.Row="1"   Grid.Column="11"
                                     Style="{DynamicResource styleTitleTextbox}"
                                     MaxLength="6"
                                     Text="{Binding ApprovalDate}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="GotFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.GotFocusedCommand}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="LostFocus">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.LostFocusedCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <Button Grid.Row="3"  x:Name="btnCancelPayment" Tag="CancelPayment" Content="Cancel Payment"
                                            Grid.Column="9" Grid.ColumnSpan="3" Margin="4"
                                            Style="{DynamicResource styleButton}" 
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnCancelPayment, Path=Tag}"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="7" Grid.RowSpan="7" Grid.ColumnSpan="13" 
                                      Header="Status" FontSize="24"  
                                      Style="{DynamicResource styleGroubox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="82"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="82"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="82"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Receipt Printer"/>
                                    <TextBlock Grid.Row="1" Grid.Column="3" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding ReceiptPrinterStatus}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="5" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Nail Printer Manager"/>
                                    <TextBlock Grid.Row="1" Grid.Column="7" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding NailPrinterManagerStatus}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="9" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Card Reader"/>
                                    <TextBlock Grid.Row="1" Grid.Column="11" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding CardReaderStatus}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="1" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Nail Label"/>
                                    <TextBlock Grid.Row="3" Grid.Column="3" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text=""/>
                                    <TextBlock Grid.Row="3" Grid.Column="5" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text=""/>
                                    <TextBlock Grid.Row="3" Grid.Column="7" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text=""/>
                                    <TextBlock Grid.Row="3" Grid.Column="9" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Total Printed"/>
                                    <TextBlock Grid.Row="3" Grid.Column="11" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding TotalPrintedCount}"/>

                                    <TextBlock Grid.Row="5" Grid.Column="1" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="Ink Weight"/>
                                    <TextBlock Grid.Row="5" Grid.Column="3" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding InkVol[0]}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="5" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding InkVol[1]}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="7" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding InkVol[2]}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="9" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding InkVol[3]}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="11" 
                                               Style="{DynamicResource styleTitleTextblock}"
                                               Text="{Binding InkVol[4]}"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="15" Grid.RowSpan="3" Grid.ColumnSpan="13" 
                                      Header="Receipt Printer" FontSize="24"  
                                      Style="{DynamicResource styleGroubox}"
                                      Visibility="{Binding AdminVisible, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnReceiptConnect" Tag="ReceiptConnect" Content="Connect"
                                            Grid.Column="1"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnReceiptConnect, Path=Tag}"/>
                                    <Button x:Name="btnReceiptDisconnect" Tag="ReceiptDisconnect" Content="Disconnect"
                                            Grid.Column="3"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnReceiptDisconnect, Path=Tag}"/>
                                    <Button x:Name="btnReceiptSample" Tag="ReceiptSample" Content="Sample"
                                            Grid.Column="5"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnReceiptSample, Path=Tag}"/>
                                    <Button x:Name="btnReceiptStatus" Tag="ReceiptStatus" Content="Status"
                                            Grid.Column="7"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnReceiptStatus, Path=Tag}"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="19" Grid.RowSpan="3" Grid.ColumnSpan="13" 
                                      Header="Nail Printer Manager" FontSize="24"  
                                      Style="{DynamicResource styleGroubox}"
                                      Visibility="{Binding AdminVisible, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnMotorOnOff" Tag="MotorOnOff" Content="{Binding Path=MotorOnOff, Mode=TwoWay}"
                                            Grid.Column="1"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnMotorOnOff, Path=Tag}"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="23" Grid.RowSpan="3" Grid.ColumnSpan="13" 
                                      Header="Card Reader" FontSize="24"  
                                      Style="{DynamicResource styleGroubox}"
                                      Visibility="{Binding AdminVisible, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnCardReaderConnection" Tag="CardReaderConnection" Content="Connection"
                                            Grid.Column="1"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnCardReaderConnection, Path=Tag}"/>
                                    <Button x:Name="btnCardReaderCheck" Tag="CardReaderCheck" Content="Check"
                                            Grid.Column="3"
                                            Style="{DynamicResource styleButton}" Margin="2"
                                            Command="{Binding ClickCommand}" 
                                            CommandParameter="{Binding ElementName=btnCardReaderCheck, Path=Tag}"/>
                                </Grid>
                            </GroupBox>

                        </Grid>
                    </TabItem>

                    <TabItem x:Name="tabBackupImages" Header="Backup Images">
                        <Grid Background="Transparent" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="206"/>
                            </Grid.RowDefinitions>
                            <Grid Background="Transparent" HorizontalAlignment="Center">
                                <ListBox x:Name ="qrImageListBox" Grid.Row="0" 
                                         ItemsSource="{Binding BackupImageList}" 
                                         Style="{StaticResource backupImageStyle}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type datas:QRImageListInfo}">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal">
