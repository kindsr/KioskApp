<UserControl x:Class="iBeautyNail.Extensions.Controls.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iBeautyNail.Extensions.Controls"
             Height="1024" Width="1280">
    <Grid>
        <Grid Opacity="0.5" Background="Gray"  />
        <Border CornerRadius="100" BorderBrush="Black" BorderThickness="5" Width="1000" Height="500" Background="White" Opacity="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding Title}" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="50,0,50,0" />
                <TextBlock Grid.Row="1" Text="{Binding Detail}" VerticalAlignment="Center" FontSize="15" Margin="50,0,50,0" />
                <Button Grid.Row="2" Width="200" Height="80" Content="OK" Command="{Binding Button0}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
