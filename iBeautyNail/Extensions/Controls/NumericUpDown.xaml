        <!--Bind the TextBlock to the Value property-->
        <Image Stretch="Fill" Grid.RowSpan="2" Source="pack://siteoforigin:,,,/Resources/Images/bar.png" Margin="5, 10" />
        <TextBlock 
            VerticalAlignment="Center"
            TextAlignment="Center" Padding="5" Margin="2" Grid.RowSpan="2"
            Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=Value}"
            Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=BoxTextColor, FallbackValue=Black }"
            FontSize="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=BoxTextSize, FallbackValue=14 }"
            FontWeight="ExtraBold"/>
        <!--</Border>-->

        <Image Name="upButton" MouseUp="upButton_Click" Grid.Column="1" Grid.Row="0" Source="pack://siteoforigin:,,,/Resources/Images/up.png" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4"/>
        <Image Name="downButton" MouseUp="downButton_Click" Grid.Column="1" Grid.Row="1" Source="pack://siteoforigin:,,,/Resources/Images/down.png" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4"/>


