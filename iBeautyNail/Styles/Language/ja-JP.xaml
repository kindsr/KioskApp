    <!-- Info Text -->
    <Style x:Key="styleTextContents" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="#Noto Sans CJK JP Regular" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource styleColorInit}" />
    </Style>

    <Style x:Key="styleTextContentsPink" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="#Noto Sans CJK JP Regular" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource styleColorPinkText}" />
    </Style>
    
    <Style x:Key="styleBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="BorderBrush" Value="{StaticResource styleColorButtonBackground1}" />
    </Style>

    <!-- Panel -->
    <Style x:Key="stylePanel" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource styleColorButtonBackground1}" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="FontFamily" Value="#Noto Sans CJK JP Regular" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{StaticResource styleColorWhiteText}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="BorderBrush" Value="{StaticResource styleColorButtonBackground1}" />
        <Setter Property="BorderThickness" Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="border" CornerRadius="10" Background="{TemplateBinding Background}">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <ContentPresenter x:Name="MyContentPresenter" Grid.Row="0" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" />

                            <Image Grid.Row="1" Source="{Binding Path=(ctrl:ImageButton.ImagePath), RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Stretch="UniformToFill"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Button Style -->
    <!-- password button -->
    <Style x:Key="styleButtonPassword" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource styleColorButtonBackground1}" />
        <Setter Property="FontFamily" Value="#Noto Sans CJK JP Regular" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{StaticResource styleColorWhiteText}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="border" CornerRadius="4" Background="{TemplateBinding Background}" RenderTransformOrigin="0.5,0.5">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter x:Name="MyContentPresenter" Grid.Column="0" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransform" TargetName="border">
                                <Setter.Value>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </TransformGroup>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

