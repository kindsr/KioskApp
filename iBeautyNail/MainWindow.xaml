<Window x:Class="iBeautyNail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:local="clr-namespace:iBeautyNail"
        xmlns:ctrl="clr-namespace:iBeautyNail.Extensions.Controls"
        mc:Ignorable="d ignore"
        Height="1920"
        Width="1080"
        Top="0"
        Left="200"
        Title="iBeautyNail"
        DataContext="{Binding Main, Source={StaticResource Locator}}" 
        ResizeMode="NoResize" WindowStartupLocation="Manual" 
        WindowState="Maximized" WindowStyle="None">
    <Grid x:Name="LayoutRoot">
        <ContentControl Name="contentControl" Content="{Binding CurrentViewModel}" />
        <Grid x:Name="layerArea" Visibility="{Binding PopupVisibility}" />
    </Grid>
</Window>
